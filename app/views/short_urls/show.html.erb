<div class="container">
  <div class="row">
    <div class="col-md-3">
      <h4>Given URL</h4>
    </div>
    <div class="col-md-3">
      <h4>Formatted URL</h4>
    </div>
    <div class="col-md-3">
      <h4>Short URL</h4>
    </div>
    <div class="col-md-1">
      <h4>No. of views</h4>
    </div>
  </div>
  <div class="row well">
    <div class="col-md-3">
      <h4> <%= @url.given_url %> </h4>
    </div>
    <div class="col-md-3">
      <h4> <%= @url.formatted_url %> </h4>
    </div>
    <div class="col-md-3">
      <h4> <%= link_to application_host(@url), url_view_path(@url.id), class: "btn", target: '_blank' %></h4>
    </div>
    <div class="col-md-1">
      <h4><%= @url.url_views.count %></h4>
    </div>
    <div class="col-md-1">
      <h4> <%= link_to "Delete", short_url_path(@url.id), method: :delete, class: "btn btn-danger" %></h4>
    </div>
    <div class="col-md-1">
      <h4> <%= link_to "Go to Index", root_path, class: "btn btn-primary" %></h4>
    </div>
  </div>
  <%= render 'url_views' %>
</div>