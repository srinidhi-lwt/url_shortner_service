<div class="container">
  <div class="row">
    <div class="col-md-3">
      <h4>Given URL</h4>
    </div>
    <div class="col-md-3">
      <h4>Formatted URL</h4>
    </div>
     <div class="col-md-3">
      <h4>Short URL</h4>
    </div>
  </div>
  <% @urls.each do |url| %>
    <div class="row well">
      <div class="col-md-3">
        <h4><%= url.given_url %></h4>
      </div>
      <div class="col-md-3">
        <h4><%= url.formatted_url %></h4>
      </div>
      <div class="col-md-3">
        <h4><%= link_to application_host(url), add_url_prefix(url), target: '_blank' %></h4>
      </div>
      <div class="col-md-3">
        <h4><%= link_to "Delete", short_url_path(url.id), method: :delete, class: "btn btn-danger" %></h4>
      </div>
    </div>
  <% end %>
</div>
