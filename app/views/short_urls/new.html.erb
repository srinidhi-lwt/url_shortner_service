<div class="container">
  <div class="row">
    <div class="col-md-4">
      <%= simple_form_for @url do |f| %>
        <% if @url.errors.any? %>
          <div id="error_explanation">
            <h2>
              <%= pluralize(@url.errors.count, "error") %>
            </h2>
            <ul>
              <% @url.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
              <% end %>
            </ul>
          </div>
        <% end %>
        <%= f.input :given_url, class: 'form-control', placeholder: 'Enter URL here', required: true %>
        <%= f.submit 'Shorten URL', class: 'btn btn-default' %>
      <% end %>
  </div>
</div>