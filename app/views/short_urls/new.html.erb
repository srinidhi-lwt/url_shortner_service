<div class="container">
  <div class="row">
    <div class="col-md-4">
      <%= simple_form_for @url do |f| %>
        <%= f.input :given_url, class: 'form-control', placeholder: 'Enter URL here', required: true %>
        <%= f.submit 'Shorten URL', class: 'btn btn-default' %>
      <% end %>
  </div>
</div>